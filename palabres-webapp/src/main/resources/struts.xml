<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>

    <!-- ===== Package de configuration de base ===== -->
    <package name="base" abstract="true" extends="struts-default">

        <interceptors>

            <interceptor name="auth" class="org.lle.palabres.interceptor.AuthInterceptor" />

            <interceptor-stack name="applicationDefaultStack">
                <interceptor-ref name="defaultStack">
                    <param name="exception.logEnabled">true</param>
                    <param name="exception.logLevel">ERROR</param>
                    <param name="exception.logCategory">org.lle.palabres.webapp</param>
                </interceptor-ref>
            </interceptor-stack>

            <interceptor-stack name="authenticatedStack">
                <interceptor-ref name="auth" />
                <interceptor-ref name="defaultStack" />
            </interceptor-stack>
        </interceptors>

        <global-results>
            <result name="Exception" type="httpheader">
                <param name="error">500</param>
                <param name="parse">true</param>
                <param name="errorMessage">%{exception}</param>
            </result>
            <result name="TechnicalException" type="httpheader">
                <param name="error">500</param>
                <param name="parse">true</param>
                <param name="errorMessage">Erreur technique - %{exception.message}</param>
            </result>
            <result name="NotFoundException" type="httpheader">
                <param name="error">404</param>
                <param name="parse">true</param>
                <param name="errorMessage">Objet introuvable - %{exception.message}</param>
            </result>
            <result name="error">/jsp/error.jsp</result>
            <result name="error-forbidden" type="httpheader">
            <param name="error">403</param>
        </result>
        </global-results>
    </package>


    <package name="public" extends="base">
        <!-- Action par défaut -->
        <default-action-ref name="index" />

        <!-- Action "index" -->
        <action name="index">
            <result>/jsp/index.jsp</result>
        </action>
        <action name="login" class="org.lle.palabres.loginAction" method="doLogin">
            <result name="input">/jsp/login.jsp</result>
            <result name="success" type="redirectAction">
                <param name="actionName">channel_list</param>
            </result>
            <result name="error">/jsp/error.jsp</result>
        </action>
        <action name="logout" class="org.lle.palabres.loginAction" method="doLogout">
            <result type="redirectAction">
                <param name="actionName">index</param>

            </result>
        </action>
        <action name="account"
                class="org.lle.palabres.GestionUtilisateurAction"
                method="doCreate">
            <interceptor-ref name="store">
                <param name="operationMode">STORE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack" />

            <result name="input">/jsp/utilisateur/account.jsp</result>
            <result name="success" type="redirectAction">
                <param name="actionName">login</param>
            </result>
            <result name="error">/jsp/error.jsp</result>
        </action>
     </package>

    <!-- ===== Package pour les actions privées ===== -->
    <package name="private" extends="base">
        <default-interceptor-ref name="authenticatedStack" />

        <action name="channel_list"
                class="org.lle.palabres.GestionChannelAction"
                method="doList">
            <interceptor-ref name="authenticatedStack" />
            <result name="input">/jsp/channel/list.jsp</result>
            <result name="success" type="redirectAction">
                <param name="actionName">message_list</param>
                <param name="channel">${channel.name}</param>
            </result>
            <result name="error">/jsp/error.jsp</result>
        </action>

        <action name="channel_new"
                class="org.lle.palabres.GestionChannelAction"
                method="doCreate">
            <interceptor-ref name="authenticatedStack" />
            <result name="input">/jsp/channel/new.jsp</result>
            <result name="success" type="redirectAction">
                <param name="actionName">message_list</param>
                <param name="channel">${channel.name}</param>
            </result>

        </action>

        <action name="message_list"
                class="org.lle.palabres.GestionChannelAction"
                method="doListMessage">
            <interceptor-ref name="authenticatedStack" />
            <result>/jsp/channel/messageList.jsp</result>


        </action>

        <!-- Actions de démonstration pour les Exceptions -->
        <action name="demo_functionalException" class="org.lle.palabres.DemoExceptionAction" method="doFunctionalException" />
        <action name="demo_notFoundException" class="org.lle.palabres.DemoExceptionAction" method="doNotFoundException" />
        <action name="demo_technicalException" class="org.lle.palabres.DemoExceptionAction" method="doTechnicalException" />

    </package>
</struts>